@model Laundry.Models.Karyawan

@{
    ViewData["Title"] = "Hapus";
}

<h2>Hapus</h2>

<h3>Apakah anda yakin ingin menghapus data ini?</h3>
<div>
    <h4>Karyawan</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NamaKaryawan)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NamaKaryawan)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.JnsKelamin)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.JnsKelamin)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Alamat)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Alamat)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdKaryawan" />
        <input type="submit" value="Hapus" class="btn btn-default" /> |
        <a asp-action="Index">Kembali ke Daftar Karyawan</a>
    </form>
</div>
